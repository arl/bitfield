# Control that we handle the case where -type X is passed
# but X doesn't exist or is not a struct.
go build -C $BITFIELD_DIR -o $TMPDIR/bitfield
! exec $TMPDIR/bitfield -in in.go -type B
! stdout .
cmp stderr want

-- in.go --
package testpkg

type A struct {
	F1 uint8 `json:"f1"`
	F2 uint8 `bitfield:"bits=3",json:"f2"`
	F3 uint16
	F4 uint8 `json:"f2",bitfield:"bits=3"`
}

-- want --
bitfield, fatal error:
	nothing to generate